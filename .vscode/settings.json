{
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  "files.associations": {
    "*.mdx": "markdown"
  },
  "[markdown]": {
    "editor.tabCompletion": "off",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "full"
  },
  "[mdx]": {
    "editor.tabCompletion": "off",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "full"
  }
}
